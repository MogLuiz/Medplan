<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/guideStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Tela de agendamento</title>
</head>

<body>

    <div class="engloba">

        <%- include ('partials/menuLateral.ejs'); %>

        <div class="wrapper">
    
            <h3 class="titulo-agendamento">Nova consulta</h3> 
    
            <form class="text-box" method="POST" action="/salvarConsulta">

                <div class="DataConsulta">
                    <input id="inputData" class="form-control" type="date" name="data" size="23"/>
                </div>

                <div class="hora">
                    <label>Hora</label>
                    <select id="" class="form-select" name="hora">
                        <option selected></option>
                        <option> 8:30</option>
                        <option> 9:10</option>
                        <option> 9:50</option>
                        <option> 10:30</option>
                        <option> 11:10</option>
                        <option> 11:50</option>
                        <option> 13:30</option>
                        <option> 14:10</option>
                        <option> 14:50</option>
                        <option> 15:30</option>
                        <option> 16:10</option>
                    </select>
                </div>
                <div class="tipo">
                    <label>Tipo de compromisso</label>
                    <input class="form-control" type="text" name="tipo" size="23" />
                </div>
                <div class="nome">
                    <label>Nome do paciente</label>
                    <select name="paciente" class="form-control campo-nome">
                        <% pacientes.forEach((paciente) => {%>
                            <option value="<%= paciente.id %>"><%= paciente.nome %></option>
                        <% }) %>
                    </select>
                    <!--  <button class="btnBuscaNome" type="">&#128269;</button> -->
                </div>
                <div class="convenio">
                    <label>ConvÃªnio</label>
                    <select id="inputConvenio" class="form-select" name="convenio">
                        <option selected></option>
                        <option> Cassi</option>
                        <option> Particular</option>
                        <option> Part desc.</option>
                    </select>
                </div>
                <div class="valor">
                    <label>Valor</label>
                    <input class="form-control" type="text" name="valor" size="5" />
                </div>
                <div class="status">
                    <label>Status</label>
                    <select id="inputStatus" class="form-select" name="status">
                        <option selected></option>
                        <option> Aguardando</option>
                        <option>Atendido</option>
                        <option>Nao Compareceu</option>
                    </select>
                </div>
                <div class="chegada">
                    <label>Chegada</label>
                    <input class="form-control" type="text" name="chegada" size="8" />
                </div>
                <div class="atendido">
                    <label>Atendido</label>
                    <input class="form-control" type="text" name="atendido" size="8" />
                </div>
                <div class="notas">
                    <label>Notas</label>
                    <textarea class="form-control" name="notas" cols="51" rows="2"></textarea>
                </div>


                <button class="btn btn-create btn-success" type="submit">Gravar</button>

                
            </form>

            <form method="GET" action="/novaConsulta">
                <button class="btn btn-novo btn-success" type="submit">Novo</button>
            </form>

        </div>

        
    </div>

    <script src="/js/script.js"></script>
</body>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        
        var decision = confirm("Deseja excluir esta consulta?");

        if(decision){
            form.submit();
        }
    }
</script>

</html>
