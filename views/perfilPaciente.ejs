<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/guideStyle.css">
    <title>Document</title>
</head>

<body>

    <div class="engloba">

        <%- include ('partials/menuLateralDados.ejs'); %>

            <div class="form-paciente">

                <h3>Perfil de <%=paciente.nome%></h3>

                <form class="cadastro" method="POST" action="/salvarPaciente">
                    <div class="row">

                        <div class="col-md-12">

                            <div class="row">
                                <div class="col-12">
                                    <label for="inputName">Nome</label>
                                    <label class="form-control">
                                        <%=paciente.nome%>
                                    </label>
                                </div>
                            </div>


                            <div class="row ">

                                <div class="col-4 ">
                                    <label for="prontuario ">Prontuario</label>
                                    <label class="form-control">
                                        <%=paciente.prontuario%>
                                    </label>
                                </div>
                                <div class="col-4">
                                    <label for="DataCadastro ">Data de cadastro</label>
                                    <label class="form-control">
                                        <%=paciente.dataCadastro%>
                                    </label>
                                </div>
                                <div class="col-4 ">
                                    <label for="Nascimento ">Data de nascimento</label>
                                    <label class="form-control">
                                        <%=paciente.nascimento%>
                                    </label>
                                </div>

                            </div>

                            <div class="form-row ">
                                <div class="col ">
                                    <label for="inputState ">Convenio</label>
                                    <label class="form-control">
                                        <%=paciente.convenio%>
                                    </label>
                                </div>
                                <div class="col ">
                                    <label for="inputState ">Sexo</label>
                                    <label class="form-control">
                                        <%=paciente.sexo%>
                                    </label>
                                </div>

                            </div>

                        </div>

                    </div>

                    <div class="row pt-1">


                        <div class="col-4 ">
                            <label for="inputState ">Estado civil</label>
                            <label class="form-control">
                                <%=paciente.estadoCivil%>
                            </label>
                        </div>
                        <div class="col-4">
                            <label for="inputState">Cor</label>
                            <label class="form-control">
                                <%=paciente.cor%>
                            </label>
                        </div>
                        <div class="col-4 ">
                            <label for="Naturalidade ">Naturalidade</label>
                            <label class="form-control">
                                <%=paciente.naturalidade%>
                            </label>
                        </div>

                    </div>

                    <div class="row pt-1">


                        <div class="col-6">
                            <label for="cpf ">CPF</label>
                            <label class="form-control">
                                <%=paciente.cpf%>
                            </label>
                        </div>

                        <div class="col-6">
                            <label for="profissao">Profissao</label>
                            <label class="form-control">
                                <%=paciente.profissao%>
                            </label>
                        </div>

                    </div>

                    <div class="row pt-1">
                        <div class="col-12">
                            <label for="email ">Email para envio de informacoes medicas</label>
                            <label class="form-control">
                                <%=paciente.email%>
                            </label>
                        </div>
                    </div>

                    <div class="row ">

                        <div class="col-8 ">
                            <label for="Logradouro ">Logradouro</label>
                            <label class="form-control">
                                <%=paciente.logradouro%>
                            </label>
                        </div>
                        <div class="col-4">
                            <label for="Complemento ">Complemento</label>
                            <label class="form-control">
                                <%=paciente.complemento%>
                            </label>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="container">
                                    <div class="row ">

                                        <div class="col-6 ">
                                            <label for="Bairro ">Bairro</label>
                                            <label class="form-control">
                                                <%=paciente.bairro%>
                                            </label>
                                        </div>
                                        <div class="col-6">
                                            <label for="Cidade ">Cidade</label>
                                            <label class="form-control">
                                                <%=paciente.cidade%>
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="container">
                                    <div class="row ">

                                        <div class="col-2 ">
                                            <label for="uf ">UF</label>
                                            <label class="form-control">
                                                <%=paciente.uf%>
                                            </label>
                                        </div>
                                        <div class="col-5">
                                            <label for="Cep ">CEP</label>
                                            <label class="form-control">
                                                <%=paciente.cep%>
                                            </label>
                                        </div>
                                        <div class="col-5">
                                            <label for="Telefone ">Telefone</label>
                                            <label class="form-control">
                                                <%=paciente.telefone%>
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="form-group class">
                                <label for="exampleFormControlTextarea1 pt-2">Observacoes</label>
                                <textarea class="form-control"><%=paciente.observacoes%></textarea>
                            </div>
                        </div>
                    </div>

                </form>

                <a href="/pacientes/perfil/edit/<%= paciente.id %>" id="btnEditarPac" class="btn btn-success">Editar</a>
                <form method="POST" action="/pacientes/delete" style="display: inline"
                    onsubmit="confirmarDelecao(event, this)">
                    <input type="hidden" name="id" value="<%= paciente.id%>">
                    <button id="btnExcluirPac" class="btn btn-success">Excluir</button>
                </form>

                <br>

            </div>

    </div>


</body>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js "
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj "
    crossorigin="anonymous "></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js "
    integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN "
    crossorigin="anonymous "></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js "
    integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF "
    crossorigin="anonymous "></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();

        var decision = confirm("Deseja deletar este paciente?");

        if (decision) {
            form.submit();
        }
    }
</script>

</html>
