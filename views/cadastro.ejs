<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/guideStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>

    <div class="engloba">

        <%- include ('partials/menuLateral.ejs'); %>

            <div class="form-paciente">

                <h3>Cadastro de novo paciente</h3>

                <form class="cadastro" method="POST" action="/salvarPaciente">
                    <div class="row">

                        <div class="col-md-12">

                            <div class="row">
                                <div class="col-12">
                                    <label for="inputName">Nome</label>
                                    <input type="text " class="form-control" id="inputName " placeholder="" name="nome">
                                </div>
                            </div>


                            <div class="row ">

                                <div class="col-4 ">
                                    <label for="prontuario ">Prontuario</label>
                                    <input type="text" class="form-control" id="prontuario" placeholder=""
                                        name="prontuario">
                                </div>
                                <div class="col-4">
                                    <label for="DataCadastro ">Data de Cadastro</label>
                                    <input type="date" class="form-control" id="DataCadastro" placeholder=""
                                        name="dataCadastro">
                                </div>
                                <div class="col-4 ">
                                    <label for="Nascimento ">Data de Nascimento</label>
                                    <input type="date" class="form-control" id="Nascimento" placeholder=""
                                        name="nascimento">
                                </div>

                            </div>

                            <div class="form-row ">
                                <div class="col ">
                                    <label for="inputState ">Convenio</label>
                                    <select id="inputState " class="form-select" name="convenio">
                                        <option>Unimed</option>
                                        <option>Vitalis</option>
                                    </select>
                                </div>
                                <div class="col ">
                                    <label for="inputState ">Sexo</label>
                                    <select id="inputState " class="form-select" name="sexo">
                                        <option>Masculino</option>
                                        <option>Feminino</option>
                                    </select>
                                </div>

                            </div>

                        </div>

                    </div>

                    <div class="row pt-1">


                        <div class="col-4 ">
                            <label for="inputState ">Estado Civil</label>
                            <select id="inputState " class="form-select " name="estadoCivil">
                                <option>Solteiro</option>
                                <option>Casado</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <label for="inputState">Cor</label>
                            <select id="inputState " class="form-select" name="cor">
                                <option>Branco</option>
                                <option>Negro</option>
                                <option>Pardo</option>
                                <option>Amarelo</option>
                            </select>
                        </div>
                        <div class="col-4 ">
                            <label for="Naturalidade ">Naturalidade</label>
                            <input type="text " class="form-control " id="Naturalidade" placeholder=" "
                                name="naturalidade">
                        </div>

                    </div>

                    <div class="row pt-1">


                        <div class="col-6">
                            <label for="cpf ">CPF</label>
                            <input type="text " class="form-control " id="cpf" placeholder=" " name="cpf">
                        </div>

                        <div class="col-6">
                            <label for="profissao">Profissao</label>
                            <input type="text " class="form-control " id="profissao " placeholder=" " name="profissao">
                        </div>

                    </div>

                    <div class="row pt-1">
                        <div class="col-12">
                            <label for="email ">Email para envio de informacoes medicas</label>
                            <input type="text " class="form-control " id="email " placeholder="" name="email">
                        </div>
                    </div>

                    <div class="row ">

                        <div class="col-8 ">
                            <label for="Logradouro ">Logradouro</label>
                            <input type="text " class="form-control " id="Logradouro " placeholder=" "
                                name="logradouro">
                        </div>
                        <div class="col-4">
                            <label for="Complemento ">Complemento</label>
                            <input type="text " class="form-control " id="Complemento " placeholder=" "
                                name="complemento">
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="container">
                                    <div class="row ">

                                        <div class="col-6 ">
                                            <label for="Bairro ">Bairro</label>
                                            <input type="text " class="form-control " id="Bairro " placeholder=" "
                                                name="bairro">
                                        </div>
                                        <div class="col-6">
                                            <label for="Cidade ">Cidade</label>
                                            <input type="text " class="form-control " id="Cidade " placeholder=" "
                                                name="cidade">
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="container">
                                    <div class="row ">


                                        <div class="col-2 ">
                                            <label for="uf ">UF</label>
                                            <input type="text " class="form-control " id="uf " placeholder=" "
                                                name="uf">
                                        </div>
                                        <div class="col-5">
                                            <label for="Cep ">CEP</label>
                                            <input type="text " class="form-control " id="Cep " placeholder=" "
                                                name="cep">
                                        </div>
                                        <div class="col-5">
                                            <label for="Telefone ">Telefone</label>
                                            <input type="text " class="form-control " id="Telefone " placeholder=" "
                                                name="telefone">
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="form-group class">
                                <label for="exampleFormControlTextarea1 pt-2">Observacoes</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                    name="observacoes"></textarea>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success float-right btnSalvarPac">Salvar</button>
                </form>
            </div>

    </div>

</body>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js "
