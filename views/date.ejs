<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="main.css">
    <link rel="stylesheet" href="/css/guideStyle.css">
    <script src="main.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>Tela de agendamento</title>
</head>

<body>

    <div class="engloba">

        <%- include ('partials/menuLateral.ejs'); %>

        <div class="agenda">

            <a class="btn btn-success btn-NovaConsulta" href="/novaConsulta">Nova consulta</a>
    
            <h3 class="titulo-agendamento">Agenda</h3> 

            <div id="calendar"></div>

        </div>

        
    </div>
</body>

<script>

    var element = document.getElementById("calendar");

    var calendar = new FullCalendar.Calendar(element,{
        initialView: 'dayGridMonth',
        locale: 'pt-br',
        events: 'agenda2',
        eventClick: function(info){
            window.location.href = '/agenda/consulta/'+info.event.id
        }
    });

    calendar.render();

</script>


</html>
