    <link rel="stylesheet" href="/css/date.css">
    <link rel="stylesheet" href="/css/pagcadastro.css">
    <link href='https://fonts.googleapis.com/css?family=roboto' rel='stylesheet' type='text/css'>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <title>Tela de agendamento</title>
</head>

<body>

    <div class="container engloba">

        <%- include ('partials/menuLateral.ejs'); %>

        <div class="wrapper">
    
            <div class="content">
                <h1>Agendamento Online</h1>
            </div>    

            <div class="tables">
                <table border="1px" cellpadding="5px" cellspacing="0" ID="alter">
                    <tr class="top">
                        <td width="55" height="40" align="center">Hora </td>
                        <td align="center">Descrição</td>
                        <td align="center">Tipo</td>
                        <td align="center">Status</td>
                        <td align="center">Valor</td>
                    </tr>
                    <% consultas.forEach(consulta => {%>

                        <% if(consulta.hora == "8:30"){%>
                            <tr class="dif">
                                <td align="center"> 8:30 </td>
